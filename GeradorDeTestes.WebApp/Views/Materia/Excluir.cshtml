@using GeradorDeTestes.WebApp.Models;

@model ExcluirMateriaViewModel
@{
    Layout = "_Layout";
    ViewBag.Titulo = "Exclusão de Matéria";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Formulário de Exclusão</h3>

                <p class="mt-4">Você deseja realmente excluir a matéria "@Model.Nome"?</p>

                @if (ViewData.ModelState["ContatoVinculado"]?.Errors.Count > 0)
                {
                    <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
                        @ViewData.ModelState["ContatoVinculado"]!.Errors.First().ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Excluir" asp-route-id="@Model.Id">
                    <div class="form-group d-flex align-items-center justify-content-end gap-3">
                        <a href="/materias" class="btn btn-outline-secondary">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-danger px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
